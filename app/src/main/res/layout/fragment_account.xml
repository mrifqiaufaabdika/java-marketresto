<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll1"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect"
            android:layout_marginBottom="16dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_weight="1"
                    >


                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tvNamaUser"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pak Nurddin"
                        android:textColor="@color/colorPrimary"
                        android:background="#0000"

                        android:gravity="center_vertical"
                        />


                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tvPhoneUser"
                        android:textSize="@dimen/textsub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+6281268475430"
                        android:textColor="@color/Tex"
                        android:background="#0000"
                        android:gravity="left"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tvEmailUser"
                        android:textSize="@dimen/textsub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pak.nurddin.resto@gmail.com"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/Tex"
                        android:background="#0000"
                        android:gravity="left"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:layout_weight="5"
                    >

                    <ImageButton
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_edit"

                        />



                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                >


                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Resto Pay"
                    android:gravity="left"
                    android:textColor="@color/textSub"
                    android:background="#0000"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvBalance"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 1.000.000"
                    android:textColor="@color/Tex"
                    android:background="#0000"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"/>

            <!--****** total********-->

        </LinearLayout>















        <LinearLayout

            android:id="@+id/linear2"
            android:layout_below="@id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect"
            android:layout_marginTop="16dp"
            >

            <!--******bag subtotal********-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/btnBantuan"
                    android:textSize="@dimen/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bantuan"
                    android:textColor="@color/Tex"
                    android:background="#0000"
                    android:padding="15dp"
                    android:gravity="center|left"
                    android:drawableRight="@drawable/ic_chevron"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"/>


            <!--******sub total********-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/btnLayanan"
                    android:textSize="@dimen/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ketentuan Layanan"
                    android:textColor="@color/Tex"
                    android:background="#0000"
                    android:padding="15dp"
                    android:gravity="center|left"
                    android:drawableRight="@drawable/ic_chevron"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"/>

            <!--****** total********-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/btnPrivasi"
                    android:textSize="@dimen/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kebijakan Privasi"
                    android:textColor="@color/Tex"
                    android:background="#0000"
                    android:padding="15dp"
                    android:gravity="left"
                    android:drawableRight="@drawable/ic_chevron"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout

            android:id="@+id/linear3"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect"
            android:layout_marginTop="32dp"

            >

            <TextView
                android:layout_weight="1"
                android:id="@+id/btn_sign_out"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluar"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="15dp"
                android:gravity="center"
                />


        </LinearLayout>


    </RelativeLayout>

    </ScrollView>



</LinearLayout>


